<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.mmpplayer.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mediaFragmentHolder"
            app:destination="@id/mediaFragmentHolder" />
    </fragment>
    <fragment
        android:id="@+id/all_media_fragment"
        android:name="com.example.mmpplayer.fragments.AllMediaFragment"
        android:label="fragment_video"
        tools:layout="@layout/fragment_all_media" >
        <argument android:name="video_music_items"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/mediaFragmentHolder"
        android:name="com.example.mmpplayer.fragments.MediaFragmentHolder"
        android:label="fragment_video_frament_holder"
        tools:layout="@layout/fragment_videos_holder" >
        <action
            android:id="@+id/action_videoFragmentHolder_to_videoFragment"
            app:destination="@id/all_media_fragment" />
        <action
            android:id="@+id/action_videoFragmentHolder_to_videoFolderFragment"
            app:destination="@id/all_media_folders_fragment" />

        <argument
            android:name="media_type"
            app:argType="string" />
        <action
            android:id="@+id/action_mediaFragmentHolder_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_mediaFragmentHolder_to_specificFolderMediaFragment"
            app:destination="@id/specificFolderMediaFragment" />
    </fragment>
    <fragment
        android:id="@+id/all_media_folders_fragment"
        android:name="com.example.mmpplayer.fragments.FoldersFragment"
        android:label="fragment_video_folder"
        tools:layout="@layout/fragment_media_all_folders" />
    <fragment
        android:id="@+id/specificFolderMediaFragment"
        android:name="com.example.mmpplayer.SpecificFolderMediaFragment"
        android:label="fragment_specific_folder_media"
        tools:layout="@layout/fragment_specific_folder_media" >
        <action
            android:id="@+id/action_specificFolderMediaFragment_to_mediaFragmentHolder"
            app:destination="@id/mediaFragmentHolder" />
    </fragment>
</navigation>